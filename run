#!/bin/bash

./clear

Color='\033[0;33m'
NoColor='\033[0m'

rm -f -r /usr/share/plymouth/themes/walpy-glitch/
cp -r ./ /usr/share/plymouth/themes/walpy-glitch

screen -dmS playmouth.preview -L -Logfile daemon.log ./run.daemon
sleep 1

echo -e "${Color}plymouth://process/show ${NoColor}"
plymouth --show-splash
./test || killall plymouthd

echo -e "${Color}plymouth://process/hide ${NoColor}"
plymouth --hide-splash
plymouth --quit
killall plymouthd
echo -e "${Color}plymouth://done ${NoColor}"
