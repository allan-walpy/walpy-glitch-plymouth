#!/bin/bash

Color='\033[0;33m'
NoColor='\033[0m'

echo -e "${Color}plymouth://process/start${NoColor}"
screen -dms git.version -q -U -L -Logfile daemon.$(date +%s).log \
    plymouthd --no-daemon --debug --debug-file=plymouth.log
sleep 5

echo -e "${Color}plymouth://process/show ${NoColor}"
sudo plymouth --show-splash
./test || true

sleep 1
sudo plymouth --hide-splash
sleep 1
sudo plymouth --quit
echo -e "${Color}plymouth://done ${NoColor}"
