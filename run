#!/bin/bash

Color='\033[0;33m'
NoColor='\033[0m'

rm -f /usr/share/plymouth/themes/walpy-glitch/adawawad
cp -r . /usr/share/plymouth/themes/walpy-glitch


echo -e "${Color}plymouth://process/show ${NoColor}"
plymouth --show-splash
sleep 3
./test || true

echo -e "${Color}plymouth://process/hide ${NoColor}"
plymouth --hide-splash
plymouth --quit
echo -e "${Color}plymouth://done ${NoColor}"
